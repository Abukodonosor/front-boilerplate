{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es5",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		// "forceConsistentCasingInFileNames": true,
		// "noImplicitReturns": true,
		// "noImplicitThis": true,
		// "noImplicitAny": true,
		// "strictNullChecks": true,
		// "suppressImplicitAnyIndexErrors": true,
		// "noUnusedLocals": true,
		// "skipLibCheck": true,
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	]
}
